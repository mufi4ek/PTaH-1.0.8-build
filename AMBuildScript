import os
import ambuild2.frontend

# Створюємо білдер через frontend API
builder = ambuild2.frontend.Build(
    sourcePath=os.path.dirname(__file__),
    api='2.2'
)

# Конфігуруємо білд
builder.Configure()

# Підключаємо AMBuilder
builder.AddBuildScript('AMBuilder')

# Запускаємо білд
builder.Build()